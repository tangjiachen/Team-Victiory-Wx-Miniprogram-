<!--pages/page4/page4.wxml-->
<view class="cu-bar bg-white solid-bottom margin-top">
    <view class="action">
      <text class="cuIcon-title text-orange "></text> 消息列表
    </view>
  </view>
  <view class="cu-list menu-avatar"   wx:for="{{articleList}}" wx:key="key" wx:for-item="item">
    <view class="cu-item"  data-title="{{item.title}}" data-article="{{item.article}}" data-imageurl="{{item.picture}}"
   data-iconpath="{{item.iconPath}}" bindtap="gotoViewNote">
      <view class="cu-avatar round lg" style="background-image:url({{item.picture}});"></view>
      <view class="content">
        <view class="text-grey">{{item.unit}}</view>
        <view class="text-gray text-sm flex">
          <text class="text-cut">
              <text class="cuIcon-infofill text-red  margin-right-xs"></text>
              {{item.title}}
          </text>
        </view>
      </view>
      <view class="action">
        <view class="text-grey text-xs">22:20</view>
        <view class="cu-tag round bg-grey sm">5</view>
      </view>
    </view>
  </view>
